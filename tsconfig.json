{
    "compilerOptions": {
        "target": "es5",
        "strict": false,
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.proxy",
            "es2015.promise"
        ],
        "baseUrl": "./resources",
        "paths": {
            "@components/*": ["js/components/*"],
            "@app/*": ["js/*"],
            "@common/*": ["js/common/*"],
            "@common": ["js/common"],
            "@admin/*": ["js/admin/*"]
        }
    },
    "include": [
        "resources/js/**/*"
    ]
}
